{
    // Make diagnostics match PICO-8 usage
    "Lua.runtime.version": "Lua 5.1",
    "Lua.runtime.nonstandardSymbol": [
        "+=",
        "-=",
        "*=",
        "/=",
        "%="
    ],
    "Lua.diagnostics.disable": [
        "unknown-symbol"
    ],
    // PICO-8 callbacks + API globals + build-time 'require'
    "Lua.diagnostics.globals": [
        "_init",
        "_update",
        "_update60",
        "_draw",
        "cls",
        "spr",
        "btn",
        "print",
        "map",
        "music",
        "sfx",
        "pset",
        "pget",
        "mset",
        "mget",
        "fset",
        "fget",
        "camera",
        "circ",
        "circfill",
        "rect",
        "rectfill",
        "line",
        "pal",
        "palt",
        "flip",
        "rnd",
        "flr",
        "ceil",
        "abs",
        "atan2",
        "cos",
        "sin",
        "sqrt",
        "add",
        "del",
        "all",
        "foreach",
        "count",
        "cartdata",
        "dget",
        "dset",
        "reload",
        "cstore",
        "memcpy",
        "memset",
        "stat",
        "require" // keep here for redundancy
    ]
}